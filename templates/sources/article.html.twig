{% extends 'base.html.twig' %}
{% block main %}
    <div id="share"></div>
    <div class="card">
        <h3 class="card-title"><a href="{{ article.url }}"
                                  class="card-title">{{ article.title }}</a></h3>
        <a href="{{ article.url }}">
            <img class="card-img-bottom" src="{{ article.urlToImage }}" alt="Pas d'image disponnible">
        </a>
        <p class="card-text">{{ article.description }}</p>
        <embed class="embed-responsive-item" src="{{ article.url }}" width="100%" height="700px">
        <div class="card-footer">
            <p class="card-text ">Publi√© le {{ article.publishedAt | date('d/m/Y h:i') }}</p>
            <p>Source : {{ article.source.name }}</p>
            <div>
            </div>
        </div>
    </div>
{% endblock %}
