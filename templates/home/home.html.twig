{% extends "base.html.twig" %}
{% block main %}
    <div class="container">
        <h1>Actualités</h1>
        {% for article in articles %}
            <div class="card">
                <h3 class="card-title"><a href="{{ article.url }}" class="card-title">{{ article.title }}</a></h3>
                <a href="{{ article.url }}">
                    <img class="card-img-bottom" src="{{ article.urlToImage }}" alt="Pas d'image disponnible">
                </a>
                <p class="card-text">{{ article.description }}</p>
                <div class="card-footer">
                    <p class="card-text ">Publié le {{ article.publishedAt | date('d/m/Y h:i') }}</p>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
